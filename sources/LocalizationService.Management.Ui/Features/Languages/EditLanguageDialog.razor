@if (Visible)
{
    <div class="fixed inset-0 bg-black bg-opacity-30 flex items-center justify-center">
        <div class="bg-white p-6 rounded shadow-lg w-96">
            <h4 class="mb-4 text-lg font-bold">Редактировать язык</h4>

            <label class="block mb-2">Код</label>
            <input @bind="Code" class="border p-2 w-full mb-4" />

            <label class="block mb-2">Название</label>
            <input @bind="DisplayName" class="border p-2 w-full mb-4" />

            <div class="mt-4 flex justify-end gap-2">
                <button @onclick="Close" class="px-4 py-2 bg-gray-300 rounded">Отмена</button>
                <button @onclick="Save" class="px-4 py-2 bg-green-600 text-white rounded">Сохранить</button>
            </div>
        </div>
    </div>
}